<div class="signup-in">
<h2 class="login-sign-up">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "ratings" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username, class: "ratings" %><br/>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password, class: "ratings" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "ratings" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :first_name, class: "ratings" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "ratings" %>
    <%= f.text_field :last_name%>
  </div>

  <div class="actions field">
    <%= f.submit "Sign up", class:"button" %>
  </div>
<% end %>

<div class= "field">
  <%= render "devise/shared/links" %>
</div>
</div>